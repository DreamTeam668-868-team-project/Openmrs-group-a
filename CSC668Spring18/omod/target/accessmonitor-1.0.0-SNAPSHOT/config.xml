<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>accessmonitor</id>
	<name>Access Monitor Module</name>
	<version>1.0.0-SNAPSHOT</version>
	<package>org.openmrs.module.accessmonitor</package>
	<author>levine</author>
	<description>
		Module for monitoring access to priveledged information
	</description>
        
        <!--
	<updateURL>https://modules.openmrs.org/modules/download/accessmonitor/update.rdf</updateURL>
        -->
	<require_version>1.11.6</require_version>
	<!-- / Module Properties -->

	<require_modules>
		<require_module version="${appframeworkVersion}">
			org.openmrs.module.appframework
		</require_module>
		<require_module version="${uiframeworkVersion}">
			org.openmrs.module.uiframework
		</require_module>
		<require_module version="${uicommonsModuleVersion}">
			org.openmrs.module.uicommons
		</require_module>
		<require_module version="${appuiVersion}">
			org.openmrs.module.appui
		</require_module>
                <require_module version="${appuiVersion}">
			org.openmrs.module.basictestdbwithtable
		</require_module>
	</require_modules>
	
	<!-- Module Activator -->
	<activator>org.openmrs.module.accessmonitor.AccessRecordActivator</activator>
	
	<aware_of_modules>
		<aware_of_module>org.openmrs.module.legacyui</aware_of_module>
	</aware_of_modules>
	<!-- Adds link to admin page 
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.accessmonitor.extension.html.AdminList</class>
	</extension>
	-->
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>
				
		AccessLog.hbm.xml
				
	</mappingFiles>
        
        <!-- Advice -->
        <advice>
            <point>org.openmrs.api.UserService</point>
            <class>org.openmrs.module.csc668spring18.advice.TestAdvice</class>
        </advice>
        <advice>
            <point>org.openmrs.api.PatientService</point>
            <class>org.openmrs.module.csc668spring18.advice.PatientAdvice</class>
        </advice>
        <advice>
            <point>org.openmrs.api.PersonService</point>
            <class>org.openmrs.module.csc668spring18.advice.PersonAdvice</class>
        </advice>
        <advice>
            <point>org.openmrs.api.OrderService</point>
            <class>org.openmrs.module.csc668spring18.advice.OrderAdvice</class>
        </advice>
        <advice>
            <point>org.openmrs.api.VisitService</point>
            <class>org.openmrs.module.csc668spring18.advice.VisitAdvice</class>
        </advice>
        <!-- /Advice -->

	<!-- Internationalization -->
	<!-- All message codes should start with accessmonitor. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->
</module>

