<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <!--
        See http://www.liquibase.org/manual/home#available_database_refactorings
        for a list of supported elements and attributes
    -->

    <changeSet id="csc668spring18-1" author="travis">
        <sql>
            drop table if exists access_log;
        </sql>
    </changeSet>

    <changeSet id="csc668spring18-2" author="travis">
        <preConditions onFail="WARN" onError="WARN">
            <not>
                <tableExists tableName="access_log"/>
            </not>
        </preConditions>
        
        <createTable tableName="access_log">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="accessing_user" type="int" />
            <column name="access_locale" type="varchar(100)" />
            <column name="accessed_on" type="datetime" />
            <column name="accessed_record_id" type="int" />
            <column name="accessed_record_type" type="varchar(255)" />
            <column name="uuid" type="varchar(38)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
        
        <addForeignKeyConstraint constraintName="user" baseTableName="access_log" baseColumnNames="accessing_user"  referencedTableName="users"
                                 referencedColumnNames="user_id" />
    </changeSet>
</databaseChangeLog>
